<ul class="profile__links">
  <% if @organization.url.present? %>
    <li><a href="<%= @organization.url %>"><i class="fa fa-fw fa-globe"></i><%= @organization.url if @organization.url.present? %></a></li>
  <% end %>

  <% if @organization.url.present? %>
    <li><a href="<%= @organization.url %>"><i class="fa fa-fw fa-pie-chart"></i>Startup Genome</a></li>
  <% end %>

  <% @organization.profile_links.each do |profile_link| %>
    <% case profile_link.name %>
        <% when "Twitter" %>
          <li><a href="<%= profile_link.url %>"><i class="fa fa-fw fa-twitter"></i><%= profile_link.name %></a></li>
        <% when "LinkedIn" %><%= image_tag("#{prod.img}", :id => "two") %>
          <li><a href="<%= profile_link.url %>"><i class="fa fa-fw fa-linkedin"></i><%= profile_link.name %></a></li>
    <% end %>
  <% end %>

  <!-- 
  Twitter: fa-twitter
  Startup Genome: fa-pie-chart
  LinkedIn: fa-linkedin 
  -->
</ul>


