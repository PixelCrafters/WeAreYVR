<% if @organization.number_of_employees.present? || @organization.years_in_business != "" %>
  <section class="profile__facts">
    <h2>Quick Facts</h2>
    <div class="row">
      <dl class="quick-facts">
        <% if @organization.number_of_employees.present? %>
          <div class="col-xs-4">
            <dt>Employees</dt>
            <dd class="quick-facts__number"><%= @organization.number_of_employees %></dd>
          </div>
        <% end %>
        <% if @organization.years_in_business != "" %>
        <div class="col-xs-4">
          <dt>In business</dt>
          <dd class="quick-facts__number"><%= @organization.years_in_business %> <small>years</small></dd>
        </div>
        <% end %>
