<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
    <% if @organization.image.present? %>
        <%= image_tag @organization.image, height: "100" %>
    <% else %>
      <span class="glyphicon glyphicon-picture", height: "100"></span>
    <% end %>
    <%= form_tag upload_image_organization_path, multipart: true do %>
    <div class="form-group file-upload">
      <%= file_field_tag :image, class: "form-control" %>
      <%= submit_tag "Choose File", class: "btn btn-default btn-sm js-choose-file" %>
      <%= submit_tag "Upload", class: "btn btn-primary btn-sm" %>
    </div>
    <% end %>
    </div>
  </div>   
  <div class="panel panel-default">
    <div class="panel-body">
    <%= form_for @organization, html: { role: "form" } do |f| %>
      <div class="form-group">
        <%= f.label :headline %>
        <%= f.text_field :headline, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area "description", class: "form-control", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.label :why_vancouver, 'Why Vancouver?' %>
        <%= f.text_area "why_vancouver", class: "form-control", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.label :number_of_employees %>
        <%= f.text_field "number_of_employees", class: "form-control", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.label :neighbourhood %>
        <%= f.text_field "neighbourhood", class: "form-control", rows: 5 %>
      </div>
      <%= f.submit "Save Info", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">   
      <%= render "organizations/edit_hiring" %>
    </div>
  </div>
</div>
