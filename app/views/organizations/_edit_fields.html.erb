<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">        
    <%= form_for @organization, html: {role: "form"} do |f| %>
      <div class="form-group">
        <%= f.label :headline %>
        <%= f.text_field :headline, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area "description", class: "form-control", :rows => "10" %>
      </div>
      <div class="form-group">
        <%= f.label :why_vancouver %>
        <%= f.text_field "why_vancouver", class: "form-control", :rows => "10" %>
      </div>
      <div class="form-group">
        <%= f.label :number_of_employees %>
        <%= f.text_field "number_of_employees", class: "form-control", :rows => "10" %>
      </div>
      <div class="form-group">
        <%= f.label :neighbourhood %>
        <%= f.text_field "neighbourhood", class: "form-control", :rows => "10" %>
      </div>
      <%= f.submit "Save Info", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">   
      <%= render "organizations/edit_hiring" %>
    </div>
  </div>
</div>
