<% if current_user.organizations.include?(@job.organization) %>
  <%= link_to new_job_path, :class => "btn btn-primary pull-right" do %>
    <i class="fa fa-fw fa-plus"></i> Add another job
  <% end %>
<% end %>

<h2><%= @job.title %></h2>
<p><%= @job.description %></p>
<p><%= @job.job_type %></p>
<p><%= @job.source %></p>
<p><%= @job.link %></p>
<p><%= @job.created_at.strftime("%B %d, %Y") %></p>
<% if @job.organization.present? %>
  <p>at <%= @job.organization.name %></p>
<% end %>

<% if current_user.organizations.include?(@job.organization) %>
  <%= link_to 'Edit', edit_job_path(@job) %> |
  <%= link_to 'Delete', @job, method: :delete %> |
<% end %>
<%= link_to 'Back to Jobs', jobs_path %>
