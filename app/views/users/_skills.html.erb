<% if !@user.tags.empty? %>
  <section class="profile__tags">
    <h2>Skills &amp; Interests</h2>
    <div class="tag-list">
      <% @user.tags.each do |tag| %>
        <%= link_to tag.name, search_path(tags: {names: [tag.name]}), :class => "entity entity-tag" %>
      <% end %>
    </div>
  </section>
<% end %>

