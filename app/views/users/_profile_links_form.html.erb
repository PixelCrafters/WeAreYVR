<div class="col-sm-10 no-buffer">
  <%= form_for @profile_link, method: :post, html: {class: "form-inline", role: "form"} do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "name" %>
    </div>
    <div class="form-group">
      <%= f.text_field :url, class: "form-control", placeholder: "url" %>
    </div>
    <%= f.hidden_field :linkable_id, :value => @user.id %>
    <%= f.hidden_field :linkable_type, :value => "User" %>
    <%= f.submit "Add Link", class: "btn btn-default" %>
  <% end %>
</div>
