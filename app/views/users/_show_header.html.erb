<section class="profile__header">
  <h1><%= @user.name %></h1>

  <% if @user.image.present? %>
    <%= image_tag @user.image_url(:thumb), height: "180" %>
  <% elsif @user.startup_genome_image.present? %>
    <%= image_tag @user.startup_genome_image %>
  <% else %>
    <span class="glyphicon glyphicon-user"></span>
  <% end %>
  
  <%= render "users/show_roles" %>
  
  <p class="profile__tagline"><%= @user.short_bio %></p>

  <%= render "users/show_profile_links" %>

  <div class="user_details">
      <% if @user.email.nil? %>
        <%= render "users/email_modal" %>
      <% end %>
    </div>
</section>
