<section class="profile__header">
  <% if @user.startup_genome_image.present? %>
    <%= image_tag @user.startup_genome_image, height: "220" %>
  <% elsif @user.image.present? %>
    <%= image_tag @user.image, height: "220"%>
  <% else %>
    <span class="glyphicon glyphicon-user"></span>
  <% end %>
  <h1><%= @user.name %></h1>
  
  <%= render "users/show_tags" %>
  
  <p class="profile__tagline">Web entrepreneur. Vancouver. Startups. Carnivore. Infovore. Managing director at <a href="#" class="wr-link-incubator">Full Stack</a>.</p>
  <ul class="profile__links">
    <li><a href="#"><i class="glyphicon glyphicon-globe"></i> bmannconsulting.com</a></li>
    <li><a href="#"><i class="fa fa-fw fa-twitter"></i> @bmann</a></li>
    <li><a href="#"><i class="fa fa-fw fa-linkedin"></i> LinkedIn</a></li>
  </ul>

  <div class="user_details">
      <% if @user.email.nil? %>
        <%= render "users/email_modal" %>
      <% end %>
    </div>
</section>
